<h1>INGREDIENTS - NEW</h1>
<div class="container">
  <%= simple_form_for(@cocktail) do |f| %>
    <% if @cocktail.errors.any? %>
      <div class="errors-container">
        <ul>
          <% @cocktail.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.input :name %>
    <%= f.input :doses  %>
    <%= f.submit "SAVE_IT", class: "btn btn-danger" %>
  <% end %>
</div>